<%- memo = @thinktank.memos.show( memoid: req.memoid, options: req.query ) -%>
<%- memo.content.split("\n").each{|para| -%>
<%- para.gsub!( /([0-9]{4}\-[0-9]{2}\-[0-9]{2}\-[0-9]{6})\.howm/ ){|m| "<a href='#{req.url_to(:show,$1)}'>#{$1}.howm</a>" } -%>
<%- para.gsub!( /\[\[(https?:[^\]\[]+)\](\[([^\]\[]*)\])?\]/ ){|m| "<a href='#{$1}'>#{$3||$1}</a>" } -%>
<%- para.gsub!( /\\t/ ){|m| "　　" } -%>
<%- -%><%= para -%><br/>
<%- } -%>

      
